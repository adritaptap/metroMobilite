<Window x:Class="MetroMobiliteUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MetroMobiliteUI"
        xmlns:views="clr-namespace:MetroMobiliteUI.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="Auto" Width="Auto" ShowInTaskbar="False">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="63*"/>
            <ColumnDefinition Width="317*"/>
        </Grid.ColumnDefinitions>
        <Button Name="btn" HorizontalAlignment="Left" Margin="10,100,0,0" VerticalAlignment="Top" Width="75" Click="DisplayData"
       ClickMode="Release">
            Afficher
        </Button>
      
        <views:UserControl1 x:Name = "UserControl1Control" Loaded = "UserControl1_Loaded" Grid.ColumnSpan="2" Visibility="Hidden"/>
    </Grid>
</Window>
